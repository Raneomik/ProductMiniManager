{% extends 'base.html.twig' %}

{% block title %}{{ 'user.login.sign_in'|trans }}{% endblock %}

{% block body %}
    <div class="container justify-content-center d-flex align-items-center text-center h-100">
        <form method="post" class="w-50 align-items-center">
            {% include 'parts/flash.html.twig' %}

            <h1 class="h3 m-3 font-weight-normal">{{ 'user.login.please'|trans }}</h1>

            <div class="form-group">
                <label for="inputUsername" class="sr-only">{{ 'user.login.username'|trans }}</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="sr-only">{{ 'user.login.password'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-primary" type="submit">
                {{ 'user.login.sign_in'|trans }}
            </button>
            {% include 'parts/langswitcher.html.twig' with { 'class' : 'btn btn-secondary '} %}

        </form>
    </div>
{% endblock %}
